@model WebCoEPhase2.ViewModelCoE.LoginVM

@{
    ViewBag.Title = "transferfund";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<html>
    <head>
        <title></title>
           <style type="text/css">
body {
background-color: #f4f4f4;
color: #5a5656;
font-family: 'Open Sans', Arial, Helvetica, sans-serif;
font-size: 16px;
line-height: 1.5em;
}
.tb10 {
	background-image:url(images/form_bg.jpg);
	background-repeat:repeat-x;
	border:1px solid #d1c7ac;

	color:#333333;
	padding:3px;
	margin-right:4px;
	margin-bottom:8px;
	font-family:tahoma, arial, sans-serif;
}
.fb8 {
	border: 2px solid #777;
	border-radius: 10px;
	outline: none;
}
           </style>

       <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js"></script>

        <script lang="en" type="text/javascript">
            var app = angular.module('myApp', []);
            app.controller('validateCtrl', function ($scope) {
               
            });
          </script>
          
    </head>

    <body>
        <h2>Fund Transfer:</h2>
          @using (Html.BeginForm("transferfundsubmit","Home",FormMethod.Post))
      {
              <div ng-app="myApp"  ng-controller="validateCtrl" id="mydiv">
        <table>
            <tr>
                <td>beneficiary Name:</td>
                <td>
                  <input type="text" name="trans.beneficiary"  CssClass="tb10" Width="251px" Height="20px" required/>
              
                </td>
            </tr>
            <tr>
                <td>
                    Bank Name:
                </td>
                <td>
                  @*  @Html.DropDownListFor(mo => mo.bank.idBank, new SelectList(ViewBag.Banks, "idBank", "BankName"), "Select Bank")*@
                <select id="dropdowntipo" name="trans.bankname" CssClass="tb10" Width="251px" Height="20px">
                  <option value="0">--Select Bank--</option>
                  <option value="HDFC">HDFC Bank</option>
                  <option value="SBI">SBI</option>
                    <option value="Kotak">Kotak</option>
                  <option value="ICICI">ICICI</option>
</select>
                </td>
            </tr>
            <tr>
                <td>
                    IFSC Code:
                </td>
                <td>
              <input type="text" name="trans.ifsc"   CssClass="tb10" Width="251px" Height="20px" required/>
                   
                </td>
            </tr>
              <tr>
                <td>
                    Naration:
                </td>
                <td>
                 
                     <input type="text" name="trans.naration" CssClass="tb10" Width="251px" Height="20px" required/>
                </td>
            </tr>
            <tr>
                <td>
                    Transfer Fund:
                </td>
                <td>
                
                     <input type="text" name="trans.transferfund"   CssClass="tb10" Width="251px" Height="20px" required/>
                   
                </td>
            </tr>
            <tr>
                <td colspan="2">
                     <input id="btnsubmit" type="submit"  name="btnsubmit" value="Submit" />
                </td>
            </tr>
        </table>
                  </div>
             <div style="color: green; font-size:17pt;">@ViewBag.msg</div>
      }
    </body>
</html>
