@model WebCoEPhase2.ViewModelCoE.LoginVM

@{
    ViewBag.Title = "UserRegInfo";
}

<html>
    <head>
        <title></title>
                 <style type="text/css">
body {
background-color: #f4f4f4;
color: #5a5656;
font-family: 'Open Sans', Arial, Helvetica, sans-serif;
font-size: 16px;
line-height: 1.5em;
}
.tb10 {
	background-image:url(images/form_bg.jpg);
	background-repeat:repeat-x;
	border:1px solid #d1c7ac;

	color:#333333;
	padding:3px;
	margin-right:4px;
	margin-bottom:8px;
	font-family:tahoma, arial, sans-serif;
}
.fb8 {
	border: 2px solid #777;
	border-radius: 10px;
	outline: none;
}
           </style>
           <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js"></script>

        <script lang="en" type="text/javascript">
            var app = angular.module('myApp', []);
            app.controller('validateCtrl', function ($scope) {

            });

           
          </script>
    </head>

    <body>
        @using (Html.BeginForm("SubmitUserInfo","Account",FormMethod.Post))
        {
            <div ng-app="myApp"  ng-controller="validateCtrl" id="mydiv">
                <p> @Html.ActionLink("Go to Login Page","Index")</p>
              <table align="center" style="width:60%" style="border: 1px solid #CCCCCC; padding: 10px;">
             <tr>
                 <td colspan="2" align="Center" style="color: #3366FF; font-size: large;">

                     User Information Form
                 </td>
             </tr>
             <tr>
                 <td>User Name:</td>
                 <td> 
                    
                     
                     <b>@Session["User"].ToString()</b>
                    

                 </td>
             </tr>
             <tr>
                 <td >First Name:</td>
                 <td >
                        <input type="text" name="firstname" CssClass="tb10" Width="251px" Height="20px"  required/>
                 </td>
             </tr>
              <tr>
                 <td>Last Name:</td>
                 <td>
                     <input type="text" name="lastname" CssClass="tb10" Width="251px" Height="20px"  required/>
                 </td>
             </tr>

               <tr>
                 <td>Email Id:</td>
                 <td>
                      <input type="text" name="emailid" CssClass="tb10" Width="251px" Height="20px"  required/>
                 </td>
             </tr>

              <tr>
                 <td>Phone No:</td>
                 <td>
                       <input type="text" name="phoneno" CssClass="tb10" Width="251px" Height="20px"  required/>
                 </td>
             </tr>

              <tr>
                 <td>Country:</td>
                 <td>
                    @Html.DropDownListFor(mo => mo.country.location_id, new SelectList(ViewBag.country, "location_id", "country_name"), "Select Country")
                 </td>
             </tr>

                 <tr>
                 <td colspan="2" align="Center">
                    <input id="btnsubmit" type="submit"  name="btnsubmit" value="Submit" />
                 </td>
                 
             </tr>
             </table>
                <div style="color: Red">@ViewBag.msg</div>
            </div>
        }
    </body>
</html>
